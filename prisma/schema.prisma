generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
  createdBy     String?
  role_id       Int?           @default(4)
  accounts      Account[]
  sessions      Session[]
  Message       Message[]
  ChatRoomUser  ChatRoomUser[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  expires_at        Int?
  expires_in        Int?
  ext_expires_in    Int?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String?
  token      String   @unique
  expires    DateTime
  email      String?
  id         String   @id @default(cuid())

  @@unique([identifier, token])
}

// suggests a many-to-many relationship
// Between ChatRoom and User, where a chat room can have multiple users
// And a user belong to multiple chat rooms.
model ChatRoom {
  id        String         @id @default(cuid())
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  messages  Message[]
  users     ChatRoomUser[]
}

// For User many-to-one relationship
// Where many Message's can be authored by one user.
model Message {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  text       String
  chatRoomId String
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}

// To facilitate a many-to-many relationship!
// You need an intermediary table to hold references to both models.
// This table will hold references to ChatRoom and User!
model ChatRoomUser {
  chatRoomId String
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])

  @@id([chatRoomId, userId]) // Composite primary key
}
